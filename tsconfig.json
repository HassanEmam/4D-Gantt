{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "module": "ES6",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "ES2016", "ES2017", "ES2018", "ES2019"],
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts"]
}
